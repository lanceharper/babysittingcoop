@{
    ViewBag.Title = "Recommendations";
}
@{
    ViewBag.Title = "Babysitting Point Rankings";
}
<h2>
    Babysitting Recommendations</h2>
<div class="controls">
    <label for="babysitters">
        Choose Babysitter
    </label>
    <select id="babysitters">
        @foreach (var babysitter in ViewBag.BabySitters)
        {
            <option value="@babysitter.Id">@babysitter.Name</option>
        }
    </select>
</div>
<table id="recommendation-list">
</table>
@section Navigation
{
    <li class="nav-header">Menu</li>
    <li>@Html.ActionLink("Rankings", "Index", "Home")</li>
    <li class="active">@Html.ActionLink("Recommendations", "Recommendations", "Home")</li>
}
@section Scripts
{
    <script type="text/javascript">
        var config = {
            listUrl: '@Url.Action("BabySitterRecommendations")'
        }
    </script>
    <script src="@Url.Content("~/Scripts/recommendations.js")" type="text/javascript"></script>
}
